<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="SvgView">
    <attr format="color|reference" name="pathColor"/>
    <attr format="dimension|reference" name="pathWidth"/>
    <attr format="reference" name="svg"/>
    <attr format="boolean" name="fill"/>
    <attr format="color|reference" name="fillColor"/>
    <attr format="boolean" name="naturalColors"/>
  </declare-styleable>

  <!--彩虹进度条-->
  <declare-styleable name="RainbowBar">
    <!--进度条颜色-->
    <attr format="color" name="rainbowBar_color_1"/>
    <attr format="color" name="rainbowBar_color_2"/>
    <attr format="color" name="rainbowBar_color_3"/>
    <!--进度条高度-->
    <attr format="dimension" name="rainbowBar_height"/>
    <!--进度条宽度-->
    <attr format="dimension" name="rainbowBar_width"/>
    <!--间隔-->
    <attr format="dimension" name="rainbowBar_space"/>
  </declare-styleable>

  <!--雪花飘落效果-->
  <declare-styleable name="FallingView">
    <!--碎片的图片,默认的图片是雪花-->
    <attr format="reference" name="fallingSrc"/>
    <!--碎片的大小，数值越大，碎片越小，默认值是3-->
    <attr format="integer" name="fallingScale"/>
    <!--密度，数值越大，碎片越密集,默认值是80-->
    <attr format="integer" name="fallingDensity"/>
    <!--碎片飘落的速度，数值越大，飘落的越慢，默认值是10-->
    <attr format="integer" name="fallingDelay"/>
    <!--自动飘落，true 是 false 否-->
    <attr format="boolean" name="isAutoFalling"/>
  </declare-styleable>

  <!--提交按钮-->
  <declare-styleable name="SubmitButton">
    <!--文字内容-->
    <attr format="string" name="buttonText"/>
    <!--初始颜色-->
    <attr format="color" name="buttonColor"/>
    <!--成功颜色-->
    <attr format="color" name="succeedColor"/>
    <!--失败颜色-->
    <attr format="color" name="failedColor"/>
    <!--文字大小-->
    <attr format="dimension" name="buttonTextSize"/>
    <attr format="color" name="buttonTextColor"/>
    <!--样式-->
    <attr format="enum" name="progressStyle">
      <enum name="loading" value="0"/>
      <enum name="progress" value="1"/>
    </attr>
  </declare-styleable>
</resources>