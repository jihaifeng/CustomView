<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <Button
      android:id="@+id/btn_verticalTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:text="verticalTextView"/>

  <Button
      android:id="@+id/btn_couponView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:text="couponView"/>
  <Button
      android:id="@+id/btn_scrollGridView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:text="scrollGridView"/>
  <Button
      android:id="@+id/btn_location"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      android:text="scrollGridView"/>
<com.jihf.view.CustomSlideButton.SlideButton
    android:id="@+id/slideButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
</LinearLayout>
