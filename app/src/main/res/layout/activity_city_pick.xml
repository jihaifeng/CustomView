<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <me.yokeyword.indexablerv.IndexableLayout
      android:id="@+id/city_root"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:indexBar_layout_width="24dp"
      app:indexBar_textColor="@android:color/black"
      app:indexBar_textSpace="8dp"/>

  <android.support.v7.widget.RecyclerView
      android:id="@+id/ry_city"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="gone"/>

  <TextView
      android:id="@+id/tv_noCityResult"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:text="没有匹配到相应的数据"
      android:textSize="18sp"
      android:visibility="gone"/>

  <ProgressBar
      android:id="@+id/pb_city"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_gravity="center"
      android:visibility="gone"/>

</FrameLayout>