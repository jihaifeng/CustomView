<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jihf.view"
    >

  <!--网络权限-->
  <uses-permission android:name="android.permission.INTERNET"/>
  <!-- 读取手机状态和身份 -->
  <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
  <!-- 网络连接 -->
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
  <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
  <!-- WIFI权限 -->
  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
  <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>

  <uses-permission android:name="com.jihf.view.permission.C2D_MESSAGE"/>

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
      >
    <activity
        android:name=".Activity.MainActivity"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        >
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".Activity.VerticalScrollViewActivity"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        />
    <activity
        android:name=".Activity.CouponActivity"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        />
    <activity
        android:name=".Activity.HorizontalScrollGridViewActivity"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        />
    <activity
        android:name=".Activity.CityPickActivity"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        />
    <activity
        android:name=".Activity.SvgActivity"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        />
    <activity
        android:name=".Activity.RainbowBarActivity"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        />
  </application>

</manifest>